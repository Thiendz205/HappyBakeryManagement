<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">

	<!-- title -->
	<title>Cake</title>

	<!-- favicon -->
	<link rel="shortcut icon" type="image/png" href="../../images/fav-icon.png">
	<!-- google font -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
	<!-- fontawesome -->
	<link rel="stylesheet" href="~/assets/css/all.min.css" asp-append-version="true" />
	<!-- bootstrap -->
	<link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
	<!-- owl carousel -->
	<link rel="stylesheet" href="~/assets/css/owl.carousel.css" asp-append-version="true" />
	<!-- magnific popup -->
	<link rel="stylesheet" href="~/assets/css/magnific-popup.css" asp-append-version="true" />
	<!-- animate css -->
	<link rel="stylesheet" href="~/assets/css/animate.css" asp-append-version="true" />
	<!-- mean menu css -->
	<link rel="stylesheet" href="~/assets/css/meanmenu.min.css" asp-append-version="true" />
	<!-- main style -->
	<link rel="stylesheet" href="~/assets/css/main.css" asp-append-version="true" />
	<!-- responsive -->
	<link rel="stylesheet" href="~/assets/css/responsive.css" asp-append-version="true" />
	<!-- site -->
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />



</head>
<body>

	<!--PreLoader-->
	@* <div class="loader">
		<div class="loader-inner">
			<div class="circle"></div>
		</div>
	</div> *@
	<!--PreLoader Ends-->
	<!-- header -->
	<div class="top-header-area" id="sticker">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="main-menu-wrap d-flex align-items-center justify-content-between flex-wrap">
						<!-- 🟧 Logo bên trái -->
						<div class="site-logo">
							<a asp-controller="Home" asp-action="Index">
								<img src="~/images/logo.png" alt="Logo">
							</a>
						</div>

						<!-- ⚪ Menu giữa -->
						<nav class="main-menu mx-auto">
							<ul class="d-flex align-items-center list-unstyled mb-0">
								<li class="current-list-item mr-4">
									<a asp-controller="Home" asp-action="Index">Home</a>
								</li>
								<li class="mr-4"><a asp-controller="Product" asp-action="Index">Product</a></li>
								<li class="mr-4">
									<a asp-controller="Orders" asp-action="OrderHistory">My Order</a>
								</li>
								<li class="mr-4">
									<a asp-controller="Evalute" asp-action="Index">Feed Back</a>
								</li>
							</ul>
						</nav>

						<!-- 🛒 Icon + Login bên phải -->
						<div class="header-icons d-flex align-items-center">
							<a class="shopping-cart mr-3" asp-controller="Cart" asp-action="Index">
								<i class="fas fa-shopping-cart"></i>
							</a>
							<a class="mobile-hide search-bar-icon mr-3" href="#">
								<i class="fas fa-search"></i>
							</a>
							<div class="login-links d-flex align-items-center">
								<partial name="_LoginPartial" />
							</div>
						</div>

						<!-- Mobile menu toggle -->
						<a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
						<div class="mobile-menu"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end header -->
	

	@RenderBody()

	<!-- footer -->
	<div class="footer-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-md-6">
					<div class="footer-box about-widget">
						<h2 class="widget-title">About us</h2>
						<p>Ut enim ad minim veniam perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae.</p>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="footer-box get-in-touch">
						<h2 class="widget-title">Get in Touch</h2>
						<ul>
							<li>34/8, East Hukupara, Gifirtok, Sadan.</li>
							<li>support@fruitkha.com</li>
							<li>+00 111 222 3333</li>
						</ul>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="footer-box pages">
						<h2 class="widget-title">Pages</h2>
						<ul>
							<li><a asp-controller="Home" asp-action="Index">Home</a></li>
							<li><a asp-controller="Product" asp-action="Index">Product</a></li>

							<li><a href="about.html">About</a></li>
							<li><a href="news.html">News</a></li>
							<li><a href="contact.html">Contact</a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-3 col-md-6">
					<div class="footer-box subscribe">
						<h2 class="widget-title">Subscribe</h2>
						<p>Subscribe to our mailing list to get the latest updates.</p>
						<form action="index.html">
							<input type="email" placeholder="Email">
							<button type="submit"><i class="fas fa-paper-plane"></i></button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- copyright -->
	<div class="copyright">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-12">
					<p>
						Copyrights &copy; 2019 - <a href="https://imransdesign.com/">Imran Hossain</a>,  All Rights Reserved.<br>
						Distributed By - <a href="https://themewagon.com/">Themewagon</a>
					</p>
				</div>
				<div class="col-lg-6 text-right col-md-12">
					<div class="social-icons">
						<ul>
							<li><a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
							<li><a href="#" target="_blank"><i class="fab fa-twitter"></i></a></li>
							<li><a href="#" target="_blank"><i class="fab fa-instagram"></i></a></li>
							<li><a href="#" target="_blank"><i class="fab fa-linkedin"></i></a></li>
							<li><a href="#" target="_blank"><i class="fab fa-dribbble"></i></a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- end copyright -->
	<!-- end footer -->
	<!-- jquery -->
	<script src="~/assets/js/jquery-1.11.3.min.js" asp-append-version="true"></script>

	<!-- bootstrap -->
	<script src="~/assets/bootstrap/js/bootstrap.min.js" asp-append-version="true"></script>

	<!-- count down -->
	<script src="~/assets/js/jquery.countdown.js" asp-append-version="true"></script>

	<!-- isotope -->
	<script src="~/assets/js/jquery.isotope-3.0.6.min.js" asp-append-version="true"></script>

	<!-- waypoints -->
	<script src="~/assets/js/waypoints.js" asp-append-version="true"></script>

	<!-- owl carousel -->
	<script src="~/assets/js/owl.carousel.min.js" asp-append-version="true"></script>

	<!-- magnific popup -->
	<script src="~/assets/js/jquery.magnific-popup.min.js" asp-append-version="true"></script>

	<!-- mean menu -->
	<script src="~/assets/js/jquery.meanmenu.min.js" asp-append-version="true"></script>

	<!-- sticker js -->
	<script src="~/assets/js/sticker.js" asp-append-version="true"></script>

	<!-- main js -->
	<script src="~/assets/js/main.js" asp-append-version="true"></script>

	@RenderSection("Scripts", required: false)

</body>
</html>