@model List<HappyBakeryManagement.DTO.EvaluteViewModel>
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<body>
    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Thế giới bánh ngọt</p>
                        <h1>Các đánh giá</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <div class="container my-5">

        <h2 class="mb-4 text-center">Customer Feedback</h2>

        <!-- Bộ lọc -->
        <h4 class="mb-3">Lọc theo tên sản phẩm</h4>
        <form asp-action="Index" method="get" class="form-inline mb-4 d-flex justify-content-center">
            <div class="form-group mr-2">
                <input type="text"
                       name="productName"
                       class="form-control"
                       placeholder="Nhập tên sản phẩm..."
                       value="@ViewBag.CurrentFilter" />
            </div>
            <button type="submit" class="btn btn-primary">Lọc</button>
        </form>

        <!-- Feedback List -->
        <div class="row">
            @if (!Model.Any())
            {
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        Không tìm thấy đánh giá nào cho sản phẩm này.
                    </div>
                </div>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@item.CustomerName</h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    Sản phẩm: @item.ProductName | Ngày: @item.EvaluationDate.ToString("dd/MM/yyyy")
                                </h6>

                                <div class="mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Score)
                                        {
                                            <span class="text-warning">&#9733;</span>
                                        }
                                        else
                                        {
                                            <span class="text-secondary">&#9733;</span>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
