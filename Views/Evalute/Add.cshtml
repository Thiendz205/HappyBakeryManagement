@model HappyBakeryManagement.DTO.EvaluteDTO
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<body>
    <!-- breadcrumb-section -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Thế giới bánh ngọt</p>
                        <h1>Đánh giá sản phẩm</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end breadcrumb section -->

    <div class="container my-5">

        @* Thông báo *@
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success">@TempData["success"]</div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger">@TempData["error"]</div>
        }

        <div class="card mb-5">
            <div class="card-body">

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-action="Add" asp-controller="Evalute" method="post">
                        @Html.AntiForgeryToken()

                        @* Tóm tắt lỗi validate *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="ProductID">Mã sản phẩm</label>
                            <input asp-for="ProductID" class="form-control" readonly />
                            @* Đảm bảo luôn post dù sau này đổi style *@
                            <input type="hidden" asp-for="ProductID" />
                            <span asp-validation-for="ProductID" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Score">Điểm đánh giá (1–5)</label>
                            <select asp-for="Score" class="form-control" required>
                                <option value="5">5 - Xuất sắc</option>
                                <option value="4">4 - Tốt</option>
                                <option value="3">3 - Bình thường</option>
                                <option value="2">2 - Kém</option>
                                <option value="1">1 - Rất tệ</option>
                            </select>
                            <span asp-validation-for="Score" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3">Gửi đánh giá</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-info">
                        Vui lòng <a asp-controller="Account" asp-action="Login">đăng nhập</a> để đánh giá sản phẩm.
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
