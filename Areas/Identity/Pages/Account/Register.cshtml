@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<a asp-action="Index" asp-controller="Home" class="btn btn-primary"> < Back Home</a>

<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="card border-light-subtle shadow-sm">
            <div class="row g-0">
                <div class="col-12 col-md-6 text-bg-light">
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="col-10 col-xl-8 py-3">
                            <img class="img-fluid rounded mb-4" loading="lazy" src="~/images/logo.png" width="245" height="80">
                            <hr class="border-primary-subtle mb-4">
                            <h2 class="h1 mb-4">Tạo mới tài khoản!</h2>
                            <p class="lead m-0">Tạo tài khoản đề đặt những chiếc bánh yêu thích của bạn.</p>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6">
                    <div class="card-body p-3 p-md-4 p-xl-5">

                        <div class="mb-5">
                            <h3>Create Account</h3>
                        </div>

                        <form id="registerForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row gy-3 gy-md-4 overflow-hidden">

                                <div class="col-12">
                                    <label asp-for="Input.Email" class="form-label">Email <span class="text-danger">*</span></label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Input.Password" class="form-label">Password <span class="text-danger">*</span></label>
                                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" required />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" required />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <div class="d-grid">
                                        <button id="registerSubmit" type="submit" class="btn btn-primary bsb-btn-xl">Sign up now</button>
                                    </div>
                                </div>

                            </div>
                        </form>

                        <hr class="mt-5 mb-4">

                        <div class="text-center">
                            Already have an account?
                            <a asp-page="./Login" class="text-primary text-decoration-none">Sign in</a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
