@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<h1>@ViewData["Title"]</h1>
<a asp-area="" asp-action="Index" asp-controller="Home" class="btn btn-primary"> < Back Home </a>
<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="card border-light-subtle shadow-sm">
            <div class="row g-0">
                <div class="col-12 col-md-6 text-bg-light">
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="col-10 col-xl-8 py-3">
                            <img class="img-fluid rounded mb-4" loading="lazy" src="~/images/logo.png" width="245" height="80" alt="BootstrapBrain Logo">
                            <hr class="border-primary-subtle mb-4">
                            <h2 class="h1 mb-4">Đăng nhập vào tài khoản của bạn.</h2>
                            <p class="lead m-0">Đặt những chiếc bánh ngon nhất của cửa hàng chúng tôi.</p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <h3>Log in</h3>
                                </div>
                            </div>
                        </div>
                        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <label asp-for="Input.Email" class="form-label">Email <span class="text-danger">*</span></label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Input.Password" class="form-label">Password <span class="text-danger">*</span></label>
                                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" required>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <div class="form-check">
                                        <input asp-for="Input.RememberMe" class="form-check-input">
                                        <label asp-for="Input.RememberMe" class="form-check-label text-secondary"></label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-grid">
                                        <button type="submit" id="login-submit" class="btn bsb-btn-xl btn-primary">Log in now</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a class="link-secondary text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot password</a>
                                    <a class="link-secondary text-decoration-none" id="create-account" asp-page="./Register">Create account</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

