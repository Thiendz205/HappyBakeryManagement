@using HappyBakeryManagement.DTO
@model ProductDTO

@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm Sản Phẩm Mới";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Add" asp-controller="Product" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="Name">Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Detail">Mô tả chi tiết</label>
            <textarea asp-for="Detail" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm" required></textarea>
            <span asp-validation-for="Detail" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price">Giá</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Nhập giá" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CreatedDate">Ngày tạo</label>
                <input asp-for="CreatedDate" type="date" class="form-control" required />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="EndDate">Ngày kết thúc</label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="form-group mb-3">
            <label>Danh mục</label>
            <select asp-for="CategoryID" asp-items="ViewBag.CategoryList" class="form-control-lg" style="height: 40px;">
                <option value="">-- Chọn danh mục --</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="ImageFile" class="form-label">Ảnh sản phẩm (chỉ .jpg / .png)</label>
            <input asp-for="ImageFile" class="form-control-file" accept=".jpg,.jpeg,.png" required />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-plus"></i> Thêm sản phẩm
            </button>
        </div>
    </form>
</div>


