@using HappyBakeryManagement.DTO
@model ProductDTO

@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm Sản Phẩm Mới";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form asp-action="Add" asp-controller="Product" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <!-- ✅ Tên sản phẩm -->
        <div class="form-group mb-3">
            <label asp-for="Name">Tên sản phẩm</label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- ✅ Mô tả -->
        <div class="form-group mb-3">
            <label asp-for="Detail">Mô tả chi tiết</label>
            <textarea asp-for="Detail" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm" required></textarea>
            <span asp-validation-for="Detail" class="text-danger"></span>
        </div>

        <!-- ✅ Giá -->
        <div class="form-group mb-3">
            <label asp-for="Price">Giá</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Nhập giá sản phẩm" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- ✅ Số lượng -->
        <div class="form-group mb-3">
            <label asp-for="Quantity">Số lượng</label>
            <input asp-for="Quantity" type="number" class="form-control" placeholder="Nhập số lượng sản phẩm" min="1" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- ✅ Danh mục -->
        <div class="form-group mb-3">
            <label>Danh mục</label>
            <select asp-for="CategoryID" asp-items="ViewBag.CategoryList" class="form-control" style="height: 40px;">
                <option value="">-- Chọn danh mục --</option>
            </select>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <!-- ✅ Ảnh sản phẩm -->
        <div class="form-group mb-4">
            <label asp-for="ImageFile" class="form-label">Ảnh sản phẩm (chỉ .jpg / .png)</label>
            <input asp-for="ImageFile" class="form-control-file" accept=".jpg,.jpeg,.png" required />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <!-- ✅ Nút thêm -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-plus"></i> Thêm sản phẩm
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
