@using HappyBakeryManagement.DTO
@model IEnumerable<ProductDTO>

@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h4>
            <a asp-action="Add" asp-controller="Product" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Thêm sản phẩm
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Mô tả</th>
                            <th>Giá</th>
                            <th>Ngày tạo</th>
                            <th>Ngày kết thúc</th>
                            <th>Danh mục</th>
                            <th>Ảnh</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Detail</td>
                                <td>@String.Format("{0:N0}₫", item.Price)</td>
                                <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                                <td>@item.EndDate?.ToString("dd/MM/yyyy")</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="~/images/products/@item.Image"alt="@item.Name" width="100" class="img-thumbnail" />
                                    }
                                    else
                                    {
                                        <span class="text-muted">No image</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-controller="Product" asp-area="Admin"
                                       asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa không?')">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
