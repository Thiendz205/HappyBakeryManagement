@using HappyBakeryManagement.DTO
@model IEnumerable<ProductDTO>

@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h4>
            <a asp-action="Add" asp-controller="Product" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Thêm sản phẩm
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Tên</th>
                            <th>Mô tả</th>
                            <th>Giá (₫)</th>
                            <th>Số lượng</th>
                            <th>Danh mục</th>
                            <th>Ảnh</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td class="text-truncate" style="max-width: 200px;">@item.Detail</td>
                                <td class="text-end">@String.Format("{0:N0}", item.Price)</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-center">@item.CategoryName</td>

                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="~/images/products/@item.Image"
                                             alt="@item.Name"
                                             width="90"
                                             height="70"
                                             class="img-thumbnail shadow-sm" />
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Chưa có ảnh</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <a asp-action="Edit"
                                       asp-controller="Product"
                                       asp-area="Admin"
                                       asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <form asp-action="Delete"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          style="display:inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="btn btn-danger btn-sm"
                                                onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này không?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
