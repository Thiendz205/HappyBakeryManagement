@model IEnumerable<HappyBakeryManagement.Models.Customer>
@{
    ViewBag.Title = "Danh sách khách hàng";
}

<style>
    body {
        padding-top: 24px;
    }


    .admin-wrap {
        padding-left: 24px;
        padding-right: 24px; 
        padding-top: 8px;
        padding-bottom: 24px;
    }

    .card.elevated {
        border: 0;
        border-radius: 0.75rem;
        box-shadow: 0 4px 20px rgba(0,0,0,.06);
    }

    .card-header.sticky {
        background: #fff;
        border-bottom: 1px solid #eef2f7;
    }

    .table thead th {
        white-space: nowrap;
    }

    .table td {
        vertical-align: middle;
    }

    .badge-mono {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        color: #495057;
    }
</style>

<div class="admin-wrap">
    <div class="card elevated mb-4">
        <div class="card-header sticky py-3 d-flex align-items-center justify-content-between">
            <h5 class="mb-0">@ViewBag.Title</h5>
            <div class="d-flex gap-2">
                <a asp-action="Add" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus mr-1"></i> Thêm khách hàng
                </a>
            </div>
        </div>

        @if (TempData["ok"] != null || TempData["err"] != null)
        {
            <div class="px-3 pt-3">
                @if (TempData["ok"] != null)
                {
                    <div class="alert alert-success mb-2">@TempData["ok"]</div>
                }
                @if (TempData["err"] != null)
                {
                    <div class="alert alert-danger mb-2">@TempData["err"]</div>
                }
            </div>
        }

        <div class="card-body pt-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Họ tên</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>CCCD</th>
                            <th>Giới tính</th>
                            <th>Ngày sinh</th>
                            <th>UserId</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Select((v, i) => new { v, i }))
                        {
                            <tr>
                                <td>@(r.i + 1)</td>
                                <td>@(string.IsNullOrWhiteSpace(r.v.FullName) ? r.v.User?.Email : r.v.FullName)</td>
                                <td>@(string.IsNullOrWhiteSpace(r.v.PhoneNumber) ? "Chưa cập nhật" : r.v.PhoneNumber)</td>
                                <td>@(string.IsNullOrWhiteSpace(r.v.Address) ? "Chưa cập nhật" : r.v.Address)</td>
                                <td>@(string.IsNullOrWhiteSpace(r.v.CitizenID) ? "Chưa cập nhật" : r.v.CitizenID)</td>
                                <td>@(r.v.Gender == null ? "" : (r.v.Gender.Value ? "Nam" : "Nữ"))</td>
                                <td>@(r.v.DOB?.ToString("dd/MM/yyyy"))</td>
                                <td><span class="badge badge-mono">@r.v.UserId</span></td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@r.v.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@r.v.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Xóa khách hàng này?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
