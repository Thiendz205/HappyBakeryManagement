@using HappyBakeryManagement.DTO
@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<EvaluteDTO>

<div class="container-fluid">

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h4 mb-0 text-gray-800">Evalute</h1>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>CustomerID</th>
                            <th>ProductID</th>
                            <th>Score</th>
                            <th>Evaluationdate</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>CustomerID</th>
                            <th>ProductID</th>
                            <th>Score</th>
                            <th>Evaluationdate</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.CustomerID</th>
                                <th>@item.ProductID</th>
                                <th>@item.Score</th>
                                <th>@item.Evaluationdate</th>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>