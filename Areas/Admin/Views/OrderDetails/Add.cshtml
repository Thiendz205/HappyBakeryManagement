@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}
@model HappyBakeryManagement.DTO.OrderDetailsDTO

@{
    ViewData["Title"] = "Thêm chi tiết đơn hàng";
}

<div class="main-container">
    <h2>➕ Thêm chi tiết đơn hàng</h2>

    <form asp-action="Add" method="post" novalidate>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <!-- ĐƠN HÀNG -->
        <div class="form-group mb-3">
            <label asp-for="OrderID" class="form-label">Đơn hàng</label>
            <select asp-for="OrderID"
                    class="form-control select2"
                    asp-items="@(new SelectList(ViewBag.Orders, "Id", "DisplayName"))">
                <option value="">-- Chọn đơn hàng --</option>
            </select>
            <span asp-validation-for="OrderID" class="text-danger"></span>
        </div>

        <!-- SẢN PHẨM -->
        <div class="form-group mb-3">
            <label asp-for="ProductID" class="form-label">Sản phẩm</label>
            <select asp-for="ProductID"
                    class="form-control select2"
                    asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))">
                <option value="">-- Chọn sản phẩm --</option>
            </select>
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>

        <!-- SỐ LƯỢNG -->
        <div class="form-group mb-3">
            <label asp-for="Quantity" class="form-label">Số lượng</label>
            <input asp-for="Quantity" class="form-control" min="1" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="TotalAmount" />
        <!-- NÚT -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">💾 Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">❌ Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Nhập để tìm kiếm...",
                allowClear: true,
                language: {
                    noResults: () => "Không tìm thấy kết quả",
                    searching: () => "Đang tìm kiếm..."
                },
                width: '100%'
            });
        });
    </script>
}
