@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model HappyBakeryManagement.DTO.OrderDetailsDTO

<div class="main-container">
    <h2>✏️ Cập nhật chi tiết đơn hàng</h2>

    <form asp-action="Edit" method="post">
        @* Hidden các giá trị không cần chỉnh *@
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="OrderID" />
        <input type="hidden" asp-for="TotalAmount" />

        <div class="card shadow-sm p-4">
            <div class="mb-3">
                <label class="form-label fw-bold">📦 Mã đơn hàng:</label>
                <span class="form-control-plaintext">@Model.OrderCode</span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">👤 Khách hàng:</label>
                <span class="form-control-plaintext">@Model.CustomerName</span>
            </div>

            <div class="mb-3">
                <label asp-for="ProductID" class="form-label fw-bold">🍰 Sản phẩm</label>
                <select asp-for="ProductID" asp-items="ViewBag.Products" class="form-select select2"></select>
                <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label fw-bold">🔢 Số lượng</label>
                <input asp-for="Quantity" type="number" min="1" max="100" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">💰 Tổng tiền:</label>
                <span class="form-control-plaintext">
                    @(Model.TotalAmount.HasValue? Model.TotalAmount.Value.ToString("N0") + " ₫" : "Chưa có")
                </span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">💾 Lưu thay đổi</button>
                <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(function () {
            $('.select2').select2({
                placeholder: "Chọn sản phẩm...",
                allowClear: true
            });
        });
    </script>
}
