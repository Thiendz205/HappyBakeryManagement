@{
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model HappyBakeryManagement.DTO.OrderDTO

<div class="main-container">
    <h2>Thêm đơn hàng</h2>

    <form asp-action="Add" method="post" novalidate>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="CustomerID"></label>
            <select asp-for="CustomerID" class="form-control select2"
                    asp-items="@(new SelectList(ViewBag.Customers, "Id", "FullName"))">
                <option value="">-- Chọn khách hàng --</option>
            </select>
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PaymentMethodID"></label>
            <select asp-for="PaymentMethodID" class="form-control select2"
                    asp-items="@(new SelectList(ViewBag.PaymentMethods, "Id", "NamePaymentMethod"))">
                <option value="">-- Chọn phương thức thanh toán --</option>
            </select>
            <span asp-validation-for="PaymentMethodID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại..." />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryAddress"></label>
            <input asp-for="DeliveryAddress" class="form-control" placeholder="Nhập địa chỉ giao hàng..." />
            <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Note"></label>
            <textarea asp-for="Note" class="form-control" placeholder="Thêm ghi chú (nếu có)..."></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Status"></label>
            <input asp-for="Status" class="form-control" placeholder="Nhập trạng thái..." />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookingDate"></label>
            <input asp-for="BookingDate" type="date" class="form-control" />
            <span asp-validation-for="BookingDate" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-add">💾 Lưu</button>
            <a asp-action="Index" class="btn btn-cancel">❌ Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Nhập để tìm kiếm...",
                allowClear: true,
                language: {
                    noResults: function () {
                        return "Không tìm thấy kết quả";
                    },
                    searching: function () {
                        return "Đang tìm kiếm...";
                    }
                },
                width: '100%'
            });
        });
    </script>
}
